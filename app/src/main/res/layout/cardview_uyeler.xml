<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/saydam2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/saydam">

            <ImageView
                android:id="@+id/imgBurcLogo"
                android:layout_width="@dimen/height130dp"
                android:layout_height="@dimen/width130dp"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="@dimen/margin16dp"
                android:layout_marginBottom="@dimen/margin16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtUyeAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin16dp"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/cardViewUyeAdiTextSize"
                app:layout_constraintStart_toEndOf="@+id/imgBurcLogo"
                app:layout_constraintTop_toTopOf="@+id/imgBurcLogo"
                tools:text="Corey Taylor" />

            <TextView
                android:id="@+id/txtDogumTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8dp"
                android:layout_marginTop="@dimen/margin4dp"
                app:layout_constraintStart_toStartOf="@+id/txtUyeAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtUyeAdi"
                tools:text="(21 MayÄ±s - 22 Haziran )" />

            <TextView
                android:id="@+id/txtPozisyon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8dp"
                android:layout_marginTop="@dimen/margin4dp"
                android:padding="@dimen/padding5dp"
                app:layout_constraintStart_toStartOf="@+id/txtUyeAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtDogumTarih"
                tools:text="Vokalist" />

            <TextView
                android:id="@+id/txtBoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8dp"
                android:layout_marginTop="@dimen/margin28dp"
                android:padding="@dimen/padding5dp"
                app:layout_constraintStart_toStartOf="@+id/txtUyeAdi"
                app:layout_constraintTop_toTopOf="@+id/txtPozisyon"
                tools:text="1.70" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>