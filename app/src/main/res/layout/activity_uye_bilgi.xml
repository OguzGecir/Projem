<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:verticalScrollbarPosition="defaultPosition"
    tools:context=".activity.UyeBilgiActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgKapak2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/uyeBilgiEkraniLogoHeight"
                android:padding="@dimen/padding50dp"
                android:scaleType="fitStart"
                android:verticalScrollbarPosition="defaultPosition"
                app:srcCompat="@drawable/banner" />

            <TextView
                android:id="@+id/txtBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/Padding10dp"
                android:text="TextView"
                android:textColor="@color/baslikRengi"
                android:textSize="@dimen/uyeBilgiEkraniBaslikBoyutu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBilgi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/Padding10dp"
                android:text="TextView"
                android:textColor="@color/sari"
                android:textSize="@dimen/uyeBilgiEkraniYaziBoyutu"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/webViewBilgi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/Padding10dp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>